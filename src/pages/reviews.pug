                            .rating.rating--hover
                                span.rating__item
                                    +mixinSvg('14', '13', 'rating__item-star', 'rating__star--big')
                                span.rating__item
                                    +mixinSvg('14', '13', 'rating__item-star', 'rating__star--big')
                                span.rating__item
                                    +mixinSvg('14', '13', 'rating__item-star', 'rating__star--big')
                                span.rating__item
                                    +mixinSvg('14', '13', 'rating__item-star', 'rating__star--big')
                                span.rating__item
                                    +mixinSvg('14', '13', 'rating__item-star', 'rating__star--big')
                        .reviews__add-body
                            form.reviews__add-form
                                .reviews__add-item
                                    +input("text", "Name", "", "")
                                .reviews__add-item
                                    +input("text", "E-mail", "", "")
                                .reviews__add-item
                                    +input("text", "Ссылка на соц сеть", "", "")
