extends ../templates/main

block variables
    - var title = 'XDLE'

include ../blocks/breadcrumbs/breadcrumbs
include ../blocks/reviews/reviews
include ../blocks/input/input

block content

    main.main
        .section.section--offset-bottom.reviews
            .layout
                .breadcrumbs.breadcrumbs--default-offset
                    ul.breadcrumbs__lists
                        +listBreadcrumbs("Главная")
                        +listBreadcrumbs("Отзывы", true)

                .heading.reviews__heading
                    h1.reviews__title Отзывы

                .reviews__wrapper
                    .reviews__add-head.reviews__add-head--mobile
                        .reviews__add-title Собрали набор?#[br] Оставьте свою оценку, для нас это важно!
                        button.button.button--white Отправить отзыв
                    .reviews__main
                        +reviews("Мария", "Чудесные пазлы. С душой. Оформление и содержание на высочайшем уровне. Замечательный подарок на праздник.")
                            +reviewsOutput("Администратор интернет-магазина", "Благодарю вас за оставленный отзыв!")
