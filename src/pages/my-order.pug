extends ../templates/main

block variables
    - var title = 'XDLE'

include ../blocks/input/input
include ../blocks/product-order/product-order

include ../blocks/quantity/quantity

block content

    main.main
        .section.section--offset-bottom.profile
            .layout
                .profile__wrapper
                    .profile__sidebar
                        .profile__user-name Sergey
                        .profile__list
                            a(href="#").profile__link Личная информация
                            a(href="#").profile__link.profile__link--active Мои заказы
                            a(href="#").profile__link Выйти

                    .my-order
                        .my-order__wrapper
                            .heading
                                h3.heading__title.heading__title--inside Мои заказы
                            .my-order__item
                                .my-order__table
                                    .my-order__table-head
                                        .my-order__table-num
